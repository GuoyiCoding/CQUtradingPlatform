<form bindsubmit="formSubmit">
  <view class='top-card'>
  <view class='title'>
    <input name="name" placeholder="商品简介（20字以内）"maxlength="20"></input>
  </view>
  <view class='link'></view>
  <view class='describle'>
  <!-- <input name="describle" placeholder='商品描述'></input> -->
  <textarea name="describle"  placeholder="商品描述（200字以内）"maxlength="200" />
  </view>

  <scroll-view scroll-x="true" style = "width:100%;position: relative" scroll-into-view="{{toView}}" scroll-with-animation = "true">
    <block wx:for="{{images}}" wx:key="*this">
      <image src='{{item}}' data-idx="{{index}}"
           bindtap="handleImagePreview"mode='aspectFill' class='img'></image>
    </block>
</scroll-view>
  <view class='img-span'>
    <image src='../../image/add_image.png' bindtap='chooseImage' class='img'></image>
  </view> 
</view>

<view class='buttom-card'>
   <view class='span'>
   <input name="price" placeholder='价格' type='digit'></input>
   </view> 
  <view class='link'></view>

   <view class='span'> 
   <picker bindchange="bindPickerChange" range="{{type}}" value='{{index}}'>
      选择分类:<text>{{type[typeId]}}</text>
  </picker>
   </view>   
</view>

<view class='buttom'>
  <button form-type='submit'>发布</button>
</view>
</form>